{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: GCC 生成活动文件",
            "command": "/opt/homebrew/bin/g++-15",  // 你的 GCC 路径不变
            "args": [  // 重点修改这部分！
                "-fdiagnostics-color=always",  // GCC 支持的颜色选项（替换 Clang 专属选项）
                "-g",  // 保留：生成调试信息，方便调试
                "${file}",  // 保留：编译当前打开的文件（test.cpp）
                "-o",  // 保留：指定输出文件
                "${fileDirname}/${fileBasenameNoExtension}"  // 保留：输出文件路径（和 test.cpp 同目录）
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "编译器: /opt/homebrew/bin/g++-15"
        }
    ],
    "version": "2.0.0"
}